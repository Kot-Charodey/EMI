<UserControl x:Class="LogViewer.MessageInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LogViewer"
             mc:Ignorable="d"
             d:DesignWidth="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <Grid Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Name="MessageLabel" TextWrapping="Wrap" Text="null message info" FontSize="14" Grid.Column="1"/>
            <Image x:Name="Image" VerticalAlignment="Top" HorizontalAlignment="Right" Width="65" Height="65"/>
            <Rectangle Width="2" HorizontalAlignment="Right" Fill="#FFC1BDBD"/>
        </Grid>
        <Rectangle Height="2" VerticalAlignment="Top" Grid.Row="1" Fill="#FFC1BDBD"/>
        <Label Name="TimeLabel" VerticalContentAlignment="Center" Content="null time info" FontSize="10" Grid.Row="1" Grid.ColumnSpan="2"/>
    </Grid>
</UserControl>
